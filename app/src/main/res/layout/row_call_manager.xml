<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
   >
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCallName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="left"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:text="@string/scr_lbl_dept_manager"
        android:textColor="@color/back_text_colour"
        android:textSize="@dimen/_14sp" />

    <RelativeLayout
        android:id="@+id/layCaller1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_6dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCaller1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="+91 9090876756"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_16dp"
            android:src="@drawable/ic_call" />


    </RelativeLayout>

    <View
        android:layout_width="@dimen/_54dp"
        android:layout_height="1.2dip"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginHorizontal="@dimen/_60dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_gravity="left"
        android:background="@color/app_gray"/>


    <RelativeLayout
        android:id="@+id/layCaller2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_0dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCaller2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="+91 9090876756"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_16dp"
            android:src="@drawable/ic_call" />


    </RelativeLayout>

    <View
        android:id="@+id/viewCaller"
        android:layout_width="match_parent"
        android:layout_height="1.2dip"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginHorizontal="@dimen/_28dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:background="@color/app_gray"/>
</androidx.appcompat.widget.LinearLayoutCompat>