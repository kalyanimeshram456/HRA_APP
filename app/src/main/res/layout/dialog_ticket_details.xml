<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/_16dp"
    android:paddingTop="@dimen/_12dp"
    android:paddingHorizontal="@dimen/_10dp"
    android:gravity="center"
    android:background="@drawable/shape_round_dialog"
    android:layout_marginVertical="@dimen/_16dp"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:background="@drawable/shape_round_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="left"
            android:text="@string/scr_lbl_customer_support"
            android:textColor="@color/color_main"
            android:textSize="@dimen/_16sp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/layout_round_shape_blue_border"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTicketNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Ticket No : #"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_issue_title"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@android:color/transparent"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:text=""
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:hint="@string/scr_lbl_issue_title"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_issue_type"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textIssueType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@drawable/ic_down"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewIssueType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:text=""
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:hint="@string/scr_lbl_select_issue_type"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextRM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_description_eng"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textDescr"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@android:color/transparent"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewDescr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:background="@drawable/toggle_add_reminder_edt"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:text=""
                android:gravity="top"
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:hint="@string/scr_lbl_description_eng"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_priority"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textState"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@drawable/ic_down"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:text=""
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:hint="Select priority"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvResolu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Resolution time : "
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_status"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textStatus"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@drawable/ic_down"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:text=""
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:hint="@string/scr_lbl_select_status"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_reason"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textReason"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@android:color/transparent"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewReason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:background="@drawable/toggle_add_reminder_edt"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:text=""
                android:gravity="top"
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:hint="@string/scr_lbl_reason"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@drawable/bg_button_round_corner_5"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:paddingTop="@dimen/_1dp"
            android:text="@string/scr_lbl_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>