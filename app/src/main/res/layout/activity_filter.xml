<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/toolbar_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout">

        <include layout="@layout/content_collapse_filter_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_80dp"
                android:layout_marginHorizontal="@dimen/_16dp"
                android:background="@drawable/layout_round_shape_blue_border"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginTop="@dimen/_10dp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgSales"
                        android:layout_width="@dimen/_50dp"
                        android:layout_height="@dimen/_50dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:background="@drawable/layout_round_shape_corners_red"
                        android:padding="@dimen/_10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_om_sales_credit_logo"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/imgSales"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSearchView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/gilroy_bold"
                            android:gravity="left|bottom"
                            android:hint="@string/scr_lbl_dashboard"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="@string/scr_lbl_sales_credit"
                            android:textColor="@color/back_text_colour"
                            android:textColorHint="@color/back_text_colour"
                            android:textSize="@dimen/_16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:fontFamily="@font/gilroy_semibold"
                            android:gravity="bottom|left"
                            android:hint="@string/scr_lbl_dashboard"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="â‚¹43454445"
                            android:textColor="@color/back_text_colour"
                            android:textColorHint="@color/back_text_colour"
                            android:textSize="@dimen/_14sp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appcomptextFilterBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="@string/scr_lb_filter_by"
                    android:textColor="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCompanyName"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="@string/scr_lbl_description_eng"
                        android:textColor="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />

                    <!--TAG Text filed-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_text"
                        android:layout_toRightOf="@+id/tvCompanyName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_6dp"
                        app:boxCornerRadiusTopEnd="@dimen/_10dp"
                        app:boxCornerRadiusTopStart="@dimen/_10dp"
                        app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                        app:boxCornerRadiusBottomStart="@dimen/_10dp"
                        app:hintTextAppearance="@style/Editext.Theme"
                        app:endIconDrawable="@android:color/transparent"
                        app:startIconContentDescription="$"
                        app:placeholderTextAppearance="@style/Editext.Theme">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/AutoComTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/toggle_add_reminder_edt"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:text=""
                            android:hint="@string/scr_lbl_description_eng"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black_heading"
                            android:textColorHint="@color/app_gray"
                            android:fontFamily="@font/gilroy_semibold"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_12sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverdue"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="@string/scr_lbl_overdue_by_days"
                        android:textColor="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />

                    <!--TAG Text filed-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_textOverdue"
                        android:layout_toRightOf="@+id/tvOverdue"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_6dp"
                        app:boxCornerRadiusTopEnd="@dimen/_10dp"
                        app:boxCornerRadiusTopStart="@dimen/_10dp"
                        app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                        app:boxCornerRadiusBottomStart="@dimen/_10dp"
                        app:hintTextAppearance="@style/Editext.Theme"
                        app:endIconDrawable="@android:color/transparent"
                        app:startIconContentDescription="$"
                        app:placeholderTextAppearance="@style/Editext.Theme">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/toggle_add_reminder_edt"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:text=""
                            android:hint="Overdue by days"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black_heading"
                            android:textColorHint="@color/app_gray"
                            android:fontFamily="@font/gilroy_semibold"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_12sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAmount"
                        android:layout_width="@dimen/_90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="@string/scr_lbl_amount"
                        android:textColor="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />

                    <!--TAG Text filed-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_textAmount"
                        android:layout_toRightOf="@+id/tvAmount"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:boxCornerRadiusTopEnd="@dimen/_10dp"
                        app:boxCornerRadiusTopStart="@dimen/_10dp"
                        app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                        app:boxCornerRadiusBottomStart="@dimen/_10dp"
                        app:hintTextAppearance="@style/Editext.Theme"
                        app:endIconDrawable="@android:color/transparent"
                        app:startIconContentDescription="$"
                        app:placeholderTextAppearance="@style/Editext.Theme">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/toggle_add_reminder_edt"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:text=""
                            android:hint="Min Amount"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black_heading"
                            android:textColorHint="@color/app_gray"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textSize="@dimen/_12sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="@dimen/_12dp"
                        android:layout_height="@dimen/_6dp"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="@dimen/_8dp"
                        android:layout_toRightOf="@+id/input_textAmount"
                        android:background="@color/black" />

                    <!--TAG Text filed-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_textMaxAmount"
                        android:layout_toRightOf="@+id/view"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_marginRight="@dimen/_10dp"
                        app:boxCornerRadiusTopEnd="@dimen/_10dp"
                        app:boxCornerRadiusTopStart="@dimen/_10dp"
                        app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                        app:boxCornerRadiusBottomStart="@dimen/_10dp"
                        app:hintTextAppearance="@style/Editext.Theme"
                        app:endIconDrawable="@android:color/transparent"
                        app:startIconContentDescription="$"
                        app:placeholderTextAppearance="@style/Editext.Theme">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/toggle_add_reminder_edt"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:text=""
                            android:hint="Max Amount"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black_heading"
                            android:textColorHint="@color/app_gray"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textSize="@dimen/_12sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appcomptextRm"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="@string/scr_lbl_rm"
                        android:textColor="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />

                    <!--TAG Text filed-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_textDate"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_toRightOf="@+id/appcomptextRm"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_6dp"
                        app:boxCornerRadiusTopEnd="@dimen/_10dp"
                        app:boxCornerRadiusTopStart="@dimen/_10dp"
                        app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                        app:boxCornerRadiusBottomStart="@dimen/_10dp"
                        app:hintTextAppearance="@style/Editext.Theme"
                        app:endIconDrawable="@drawable/ic_up_solid"
                        app:startIconContentDescription="$"
                        app:placeholderTextAppearance="@style/Editext.Theme">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/AutoComTextViewDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/toggle_add_reminder_edt"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:text=""
                            android:hint="Select RM"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black_heading"
                            android:textColorHint="@color/app_gray"
                            android:fontFamily="@font/gilroy_semibold"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_12sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/appcomptextState"
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="@string/scr_lbl_state"
                        android:textColor="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />

                    <!--TAG Text filed-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_textTime"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        android:layout_toRightOf="@+id/appcomptextState"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_6dp"
                        app:boxCornerRadiusTopEnd="@dimen/_10dp"
                        app:boxCornerRadiusTopStart="@dimen/_10dp"
                        app:boxCornerRadiusBottomEnd="@dimen/_10dp"
                        app:boxCornerRadiusBottomStart="@dimen/_10dp"
                        app:hintTextAppearance="@style/Editext.Theme"
                        app:endIconDrawable="@drawable/ic_up_solid"
                        android:drawablePadding="@dimen/_10dp"
                        app:startIconContentDescription="$"
                        app:placeholderTextAppearance="@style/Editext.Theme">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/AutoComTextViewTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/toggle_add_reminder_edt"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:text=""
                            android:hint="Select State"
                            android:imeOptions="actionDone"
                            android:textColor="@color/black_heading"
                            android:textColorHint="@color/app_gray"
                            android:fontFamily="@font/gilroy_semibold"
                            android:padding="@dimen/_10dp"
                            android:textSize="@dimen/_12sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_25dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@drawable/bg_button_round_corner_5"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_16dp"
            android:paddingTop="@dimen/_1dp"
            android:text="@string/scr_lbl_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.appcompat.widget.LinearLayoutCompat>