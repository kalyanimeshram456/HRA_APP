<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSemiTransparentWhite"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_turanthbiz" />

            <ProgressBar
                style="?android:attr/progress"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_120dp"
                android:indeterminateDrawable="@drawable/ring_progressbar"
                android:indeterminateDuration="1200"
                android:indeterminateTint="@color/color_main" />
<!--fed02d-->
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/scr_message_please_wait"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_18sp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_15dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sp"
            android:visibility="gone" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>