<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_16dp"
    android:layout_marginBottom="@dimen/_0dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_6dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/back_text_colour"
        android:id="@+id/tvDb"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNoOfLr"
            android:layout_width="@dimen/_120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_editext_color"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="start"
            android:hint="@string/scr_lbl_lr_no"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@drawable/edit_text_selector"
            android:textSize="@dimen/_14sp" />

        <RelativeLayout
            android:id="@+id/llImageView"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_toRightOf="@+id/etNoOfLr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/imgNoImage"
                    android:layout_width="@dimen/_70dp"
                    android:layout_height="@dimen/_70dp"

                    android:elevation="10dp"
                    android:gravity="center"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_8dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCamera"
                        android:layout_width="@dimen/_70dp"
                        android:layout_height="@dimen/_70dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_camera_with_card"
                        android:visibility="visible" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgRemoveImage"
                            android:visibility="visible"
                            android:layout_width="@dimen/_16dp"
                            android:layout_height="@dimen/_16dp"
                            android:layout_marginTop="@dimen/_3dp"
                            android:layout_marginRight="@dimen/_3dp"
                            android:src="@drawable/ic_cancel_white"
                            android:layout_gravity="right"
                            />
                    </FrameLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/llImageView">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgAdd"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:layout_marginRight="@dimen/_16dp"
                android:src="@drawable/ic_plus"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRemove"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_toRightOf="@+id/imgAdd"
                android:gravity="center"
                android:src="@drawable/ic_remove" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>