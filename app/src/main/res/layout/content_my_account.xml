<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/toolbar_layout"
    android:background="@drawable/bg_my_account"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout">

        <include layout="@layout/content_collapse_account_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_weight="1">

                        <FrameLayout
                            android:id="@+id/frameLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgLogout"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:clickable="true"
                                android:onClick="onClick"
                                android:src="@drawable/bg_profile_images"
                                android:visibility="visible"
                                android:scaleType="centerCrop"
                                app:civ_border_color="@android:color/transparent"
                                app:civ_border_width="1dp" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_20dp"
                                android:layout_height="@dimen/_20dp"
                                android:layout_gravity="bottom|right"
                                android:src="@drawable/ic_add_dashboard"/>

                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSearchView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_toRightOf="@+id/frameLayout"
                            android:fontFamily="@font/gilroy_bold"
                            android:gravity="left"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="Harshal Wagh"
                            android:textColor="@color/back_text_colour"
                            android:textColorHint="@color/back_text_colour"
                            android:textSize="@dimen/_16dp" />
                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_35dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_toRightOf="@+id/frameLayout"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:text="ACCOUNT"
                    android:textAllCaps="true"
                    android:textColor="@color/back_text_colour"
                    android:textColorHint="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSalesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_account_details" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_25dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_toRightOf="@+id/frameLayout"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:text="@string/scr_lbl_general"
                    android:textAllCaps="true"
                    android:textColor="@color/back_text_colour"
                    android:textColorHint="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgAcc"
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_change_password"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="@string/scr_lbl_change_password"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLogoutNew"
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_om_logout"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLogoutNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="Logout"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_25dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:background="@drawable/bg_button_round_corner_5"
                    android:fontFamily="@font/gilroy_semibold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2dp"
                    android:text="@string/scr_lbl_save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.appcompat.widget.LinearLayoutCompat>