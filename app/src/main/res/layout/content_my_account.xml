<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/toolbar_layout"
    android:background="@drawable/bg_my_account"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/expandedImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180dp"
                    android:src="@drawable/bg_my_account_2"

                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7"
                    />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_110dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_weight="1">

                        <FrameLayout
                            android:id="@+id/frameLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <RelativeLayout
                                android:id="@+id/llImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:orientation="horizontal">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/imgEmp"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:clickable="true"
                                        android:onClick="onClick"
                                        android:src="@drawable/bg_profile_images"
                                        android:visibility="visible"
                                        android:scaleType="centerCrop"
                                        app:civ_border_color="@android:color/transparent"
                                        app:civ_border_width="1dp" />

                                </LinearLayout>
                                <!-- android:indeterminateTintMode="src_atop"-->
                                <ProgressBar
                                    android:id="@+id/progress_bar"
                                    android:layout_width="@dimen/_40dp"
                                    android:layout_height="@dimen/_40dp"
                                    android:layout_centerInParent="true"
                                    android:indeterminate="true"

                                    android:indeterminateDrawable="@drawable/progress_bar_color"
                                    android:layout_gravity="center" />

                            </RelativeLayout>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgAdd"
                                android:layout_width="@dimen/_20dp"
                                android:layout_height="@dimen/_20dp"
                                android:layout_gravity="bottom|right"
                                android:src="@drawable/ic_add_dashboard"/>

                        </FrameLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvEmpName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_toRightOf="@+id/frameLayout"
                            android:fontFamily="@font/gilroy_bold"
                            android:gravity="left"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="Harshal Wagh"
                            android:textColor="@color/back_text_colour"
                            android:textColorHint="@color/back_text_colour"
                            android:textSize="@dimen/_16dp" />
                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90dp"
                    android:background="@android:color/transparent"
                    style="@style/AppThemeMyAccount"
                    app:layout_collapseMode="pin" >

                    <include layout="@layout/content_collapse_account_collaps_header" />

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_24dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_toRightOf="@+id/frameLayout"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:text="ACCOUNT"
                    android:textAllCaps="true"
                    android:textColor="@color/back_text_colour"
                    android:textColorHint="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSalesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_account_details" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_25dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_toRightOf="@+id/frameLayout"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:text="@string/scr_lbl_leaves"
                    android:textAllCaps="true"
                    android:textColor="@color/back_text_colour"
                    android:textColorHint="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layApplyLeave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgApplyLeave"
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_leave_person"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvApplyLeave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="@string/scr_lbl_apply_leave"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layLeaveApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLeaveApp"
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_om_logout"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLeaveApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="@string/scr_lbl_leave_applications"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_25dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_toRightOf="@+id/frameLayout"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="left"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:text="@string/scr_lbl_general"
                    android:textAllCaps="true"
                    android:textColor="@color/back_text_colour"
                    android:textColorHint="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layChangePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgChangePass"
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_change_password"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvChangePass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="@string/scr_lbl_change_password"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layTerms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgTerms"
                        android:layout_width="@dimen/_17dp"
                        android:layout_height="@dimen/_17dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_terms"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="@string/scr_lbl_terms_of_use"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgPrivacy"
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_privacy"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="@string/scr_lbl_privacy_policy"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:orientation="horizontal"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLogoutNew"
                        android:layout_width="@dimen/_16dp"
                        android:layout_height="@dimen/_16dp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_om_logout"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLogoutNew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_15dp"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:text="Logout"
                        android:textColor="@color/back_text_colour"
                        android:textColorHint="@color/back_text_colour"
                        android:textSize="@dimen/_14sp" />


                </androidx.appcompat.widget.LinearLayoutCompat>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="@dimen/_18dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:background="@color/light_grey_30"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_25dp"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:background="@drawable/bg_button_round_corner_5"
                    android:fontFamily="@font/gilroy_semibold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2dp"
                    android:text="@string/scr_lbl_save"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.appcompat.widget.LinearLayoutCompat>