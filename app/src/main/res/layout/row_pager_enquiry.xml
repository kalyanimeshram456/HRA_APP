<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layClick"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
    android:layout_marginHorizontal="@dimen/_1dp"

        android:orientation="horizontal"
        android:paddingVertical="@dimen/_2dp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPageNo"
            android:layout_width="@dimen/_32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_regular"
            android:hint="@string/scr_lbl_dashboard"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingVertical="@dimen/_5dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>
