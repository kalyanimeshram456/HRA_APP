<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
   >

    <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:paddingBottom="@dimen/_16dp"
        android:paddingTop="@dimen/_12dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/shape_round_dialog"
        android:layout_marginVertical="@dimen/_16dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="left"
            android:text="@string/scr_lbl_add_reminder"
            android:textColor="@color/color_main"
            android:textSize="@dimen/_16sp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/layout_round_shape_blue_border"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="@string/scr_lbl_description_eng"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@android:color/transparent"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewDesr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:text=""
                android:hint="@string/scr_lbl_description_eng"
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Date"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textDate"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@drawable/add_reminder_layout"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:inputType="none"
                android:text=""
                android:cursorVisible="false"
                android:hint="DD/MM/YYYY"
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Time"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textTime"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@drawable/add_time_layout"
            android:drawablePadding="@dimen/_10dp"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:inputType="none"
                android:text=""
                android:cursorVisible="false"
                android:hint="- : -"
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Status"
            android:visibility="gone"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textStatus"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@drawable/ic_down"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:text=""
                android:hint="@string/scr_lbl_status"
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Remark"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <!--TAG Text box-->

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLocationDescr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:layout_marginTop="@dimen/_6dp"
                android:imeOptions="actionDone"
                android:textAlignment="textStart"
                android:background="@drawable/toggle_add_reminder_edt"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:layout_marginHorizontal="@dimen/_10dp"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textSize="@dimen/_15sp"
                android:paddingTop="@dimen/_10dp"
                android:paddingHorizontal="@dimen/_10dp"
                android:hint="Reminder Remark"
                android:textColorHint="@color/app_gray"
                app:errorEnabled="true"
                android:gravity="start" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appcomptextTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Tag Employee"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:focusable="false"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:paddingBottom="@dimen/_5dp"
            android:layout_marginTop="@dimen/_6dp"
            android:background="@drawable/shape_round_white_round_thick_dialog"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:focusableInTouchMode="false"
            android:nestedScrollingEnabled="true"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/row_add_tag" />

       <!-- <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >-->




       <!-- </androidx.appcompat.widget.LinearLayoutCompat>-->

        <!--TAG Text filed-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_textTag"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginTop="@dimen/_6dp"
            app:boxCornerRadiusTopEnd="@dimen/_10dp"
            app:boxCornerRadiusTopStart="@dimen/_10dp"
            app:boxCornerRadiusBottomEnd="@dimen/_10dp"
            app:boxCornerRadiusBottomStart="@dimen/_10dp"
            app:hintTextAppearance="@style/Editext.Theme"
            app:endIconDrawable="@android:color/transparent"
            android:drawablePadding="@dimen/_10dp"
            app:startIconContentDescription="$"
            app:placeholderTextAppearance="@style/Editext.Theme">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/AutoComTextViewTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toggle_add_reminder_edt"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="text"
                android:text=""
                android:imeOptions="actionDone"
                android:textColor="@color/black_heading"
                android:hint="Add Tag"
                android:textColorHint="@color/app_gray"
                android:fontFamily="@font/gilroy_semibold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/_14sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addReminderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@drawable/bg_button_round_corner_5"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:paddingTop="@dimen/_1dp"
            android:text="@string/scr_lbl_add_reminder"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>