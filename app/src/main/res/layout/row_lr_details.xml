<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_16dp"
    android:layout_marginBottom="@dimen/_0dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etNoOfLr"
            android:layout_width="@dimen/_120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_editext_color"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="start"
            android:hint="@string/scr_lbl_lr_no"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@drawable/edit_text_selector"
            android:textColorHint="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/imgNoImage"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_toRightOf="@+id/etNoOfLr"
            android:elevation="10dp"
            android:gravity="center"
            android:visibility="visible"
            app:cardCornerRadius="@dimen/_8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgShow"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="fitXY"
                android:background="@color/color_blue_10"
                android:src="@drawable/ic_camera_with_card"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_toRightOf="@+id/imgNoImage">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgStatus"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:layout_marginRight="@dimen/_16dp"
                android:src="@drawable/ic_plus"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tvPrice"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/imgStatus"
                android:gravity="center"
                android:src="@drawable/ic_remove" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>