<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_16dp"
    android:layout_marginBottom="@dimen/_0dp"
    android:paddingTop="@dimen/_10dp"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/gilroy_semibold"
            android:text="07 Oct 2021"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVehNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/gilroy_semibold"
            android:text="MH 03 CV 5243"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp"
            android:visibility="visible" />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgStatus"
            android:layout_width="@dimen/_22dp"
            android:layout_height="@dimen/_22dp"
            android:src="@drawable/ic_checked_com"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLrNo"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/imgStatus"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/back_text_colour"
            android:textSize="@dimen/_14sp" />


    </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.2dip"
        android:layout_marginTop="@dimen/_6dp"
        android:background="@color/light_grey"/>

</androidx.appcompat.widget.LinearLayoutCompat>