<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_8dp"
    app:cardElevation="@dimen/_0dp"
    android:background="@color/bg_screen"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginTop="@dimen/_1dp"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardElevation="@dimen/_0dp"
        android:background="@drawable/layout_round_shape_corners_15_white"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@android:color/transparent"
                android:paddingVertical="@dimen/_8dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layBirthPro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.6">

                    <LinearLayout
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:background="@android:color/transparent"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgBirthPro"
                            android:layout_width="@dimen/_40dp"
                            android:layout_height="@dimen/_40dp"
                            android:layout_gravity="left|center"
                            android:gravity="left"
                            android:src="@drawable/ic_user"
                            android:visibility="visible"
                            app:civ_border_color="@color/pink"
                            app:civ_border_width="1dp" />


                    </LinearLayout>
                    <!-- android:indeterminateTintMode="src_atop"-->
                    <ProgressBar
                        android:id="@+id/progress_barBirth"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:indeterminate="true"
                        android:indeterminateDrawable="@drawable/progress_bar_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1.2"
                    android:paddingTop="@dimen/_0dp"
                    android:gravity="left|center_vertical"
                    >


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBirthName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="User name"
                        android:textAlignment="center"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_14sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBirthValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvBirthName"
                        android:layout_gravity="center"
                        android:fontFamily="@font/gilroy_regular"
                        android:inputType="textMultiLine"
                        android:text="User designation"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_weight="1.6"
                    android:gravity="right|center_horizontal"
                    android:paddingTop="@dimen/_0dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLeave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/gilroy_regular"
                        android:gravity="bottom"
                        android:inputType="textMultiLine"
                        android:text="03"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_13sp" />


                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_weight="1.3"
                android:gravity="right|center_horizontal"
                android:paddingTop="@dimen/_0dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_0dp"
                    android:fontFamily="@font/gilroy_regular"
                    android:inputType="textMultiLine"
                    android:text="@string/scr_lbl_rs_0"
                    android:textAlignment="center"
                    android:textColor="@color/black_heading"
                    android:textSize="@dimen/_13sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="@dimen/_16dp"
                    android:layout_height="@dimen/_16dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit_single_black" />


            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</RelativeLayout>