<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_350dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/_16dp"
    android:paddingTop="@dimen/_12dp"
    android:paddingHorizontal="@dimen/_16dp"
    android:gravity="center"
    android:background="@drawable/shape_round_dialog"
    android:layout_marginVertical="@dimen/_16dp"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="left"
            android:text="ट्रिप अवधि"
            android:visibility="invisible"
            android:textColor="@color/color_main"
            android:textSize="@dimen/_16sp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCancel"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_close" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical|top"
            android:layout_gravity="center_vertical|top"
            android:layout_marginRight="@dimen/_4dp"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="From : "
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvStart"
                android:background="@drawable/button_round_shape_corners"
                android:clickable="true"
                android:layout_marginTop="@dimen/_2dp"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_3dp"
                android:paddingVertical="@dimen/_10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDateValueFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_semibold"
                    android:text="25 Aug 2021"
                    android:textColor="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <ImageView
                    android:layout_width="@dimen/_17dp"
                    android:layout_height="@dimen/_17dp"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_calendar" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|top"
            android:layout_marginLeft="@dimen/_4dp"
            android:layout_gravity="center_vertical|top"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:gravity="center_horizontal"
                android:text="To : "
                android:textColor="@color/back_text_colour"
                android:textSize="@dimen/_14sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layCalender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEnd"
                android:background="@drawable/button_round_shape_corners"
                android:clickable="true"
                android:layout_marginTop="@dimen/_2dp"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_3dp"
                android:paddingVertical="@dimen/_10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_semibold"
                    android:text="25 Aug 2021"
                    android:textColor="@color/back_text_colour"
                    android:textSize="@dimen/_14sp" />

                <ImageView
                    android:layout_width="@dimen/_17dp"
                    android:layout_height="@dimen/_17dp"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_calendar" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_25dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/layout_round_shape_corners_8_grey"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:paddingTop="@dimen/_2dp"
            android:layout_weight="1"
            android:text="@string/scr_lbl_cancel"
            android:textColor="@color/color_main"
            android:layout_marginRight="@dimen/_3dp"
            android:textSize="@dimen/_14sp" />

         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/submitButton"
             android:layout_width="match_parent"
             android:layout_height="@dimen/_40dp"
             android:layout_alignParentBottom="true"
             android:layout_gravity="bottom"
             android:layout_weight="1"
             android:layout_marginLeft="@dimen/_3dp"
             android:background="@drawable/bg_button_round_corner_5"
             android:fontFamily="@font/gilroy_semibold"
             android:gravity="center"
             android:paddingTop="@dimen/_2dp"
             android:text="@string/scr_lbl_submit"
             android:textColor="@color/white"
             android:textSize="@dimen/_14sp" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>