<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/toolbar_layout"
    android:background="@color/white"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout">

        <include layout="@layout/content_collapse_common_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_35dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50dp"
                        android:layout_marginTop="@dimen/_0dp"
                        android:layout_weight="1">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgSales"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="right"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            android:background="@drawable/layout_round_shape_corners_red"
                            android:padding="@dimen/_10dp"
                            android:src="@drawable/ic_om_sales_credit_logo"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/imgSales"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvSearchView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/gilroy_semibold"
                                android:gravity="left|bottom"
                                android:hint="@string/scr_lbl_dashboard"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:text="@string/scr_lbl_sales_credit"
                                android:textColor="@color/back_text_colour"
                                android:textColorHint="@color/back_text_colour"
                                android:textSize="@dimen/_16sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTotalCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/gilroy_semibold"
                                android:gravity="bottom|left"
                                android:hint="â‚¹0"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:text=""
                                android:textColor="@color/back_text_colour"
                                android:textColorHint="@color/back_text_colour"
                                android:textSize="@dimen/_14sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fromDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/gilroy_semibold"
                            android:gravity="right"
                            android:hint="@string/scr_lbl_dashboard"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="20/10/2021"
                            android:textColor="@color/back_text_colour"
                            android:textColorHint="@color/back_text_colour"
                            android:textSize="@dimen/_14dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/toDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:fontFamily="@font/gilroy_semibold"
                            android:gravity="left"
                            android:hint="@string/scr_lbl_dashboard"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="-20/10/2021"
                            android:textColor="@color/back_text_colour"
                            android:textColorHint="@color/back_text_colour"
                            android:textSize="@dimen/_14dp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layBorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layTop"
                    android:layout_marginHorizontal="@dimen/_16dp"
                    android:layout_marginTop="@dimen/_16dp"
                    android:background="@drawable/layout_round_shape_blue_border"
                    android:orientation="vertical"

                    android:paddingBottom="@dimen/_10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/_16dp"
                            android:layout_marginBottom="@dimen/_2dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:gravity="left|bottom"
                            android:hint="@string/scr_lbl_dashboard"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="@string/scr_lbl_sales_credit"
                            android:textColor="@color/back_text_colour"
                            android:textColorHint="@color/back_text_colour"
                            android:textSize="@dimen/_15sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgFilter"
                            android:layout_width="@dimen/_18dp"
                            android:layout_height="@dimen/_18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_60dp"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgGraph"
                            android:layout_width="@dimen/_18dp"
                            android:layout_height="@dimen/_18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_60dp"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgTable"
                            android:layout_width="@dimen/_18dp"
                            android:layout_height="@dimen/_18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="right"
                            android:layout_marginHorizontal="@dimen/_16dp"
                            android:visibility="visible" />


                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/layList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_6dp"
                        android:background="@drawable/layout_round_shape_grey_border_small"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_weight="0.9"
                                android:gravity="left">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvCompanyName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:fontFamily="@font/gilroy_bold"
                                    android:gravity="center"
                                    android:imeOptions="actionDone"
                                    android:inputType="textMultiLine"
                                    android:text="@string/scr_lbl_company_name"
                                    android:textAlignment="center"
                                    android:textColor="@color/back_text_colour"
                                    android:textColorHint="@color/back_text_colour"
                                    android:textSize="@dimen/_12sp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgCompanySort"
                                    android:layout_width="@dimen/_12dp"
                                    android:layout_height="@dimen/_12dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_2dp"
                                    android:layout_toRightOf="@+id/tvCompanyName"
                                    android:src="@drawable/ic_om_sort" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_5dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="text">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvLimit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/gilroy_bold"
                                    android:gravity="center"
                                    android:imeOptions="actionDone"
                                    android:inputType="textMultiLine"
                                    android:maxLines="2"
                                    android:text="@string/src_lbl_limit"
                                    android:textColor="@color/back_text_colour"
                                    android:textColorHint="@color/back_text_colour"
                                    android:textSize="@dimen/_12sp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgLimit"
                                    android:layout_width="@dimen/_12dp"
                                    android:layout_height="@dimen/_12dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="@dimen/_2dp"
                                    android:layout_marginTop="@dimen/_3dp"
                                    android:layout_toRightOf="@+id/tvLimit"
                                    android:src="@drawable/ic_om_sort" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_weight="1"
                                android:gravity="right">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvBalance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/gilroy_bold"
                                    android:gravity="center|right"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:text="Balance"
                                    android:textColor="@color/back_text_colour"
                                    android:textColorHint="@color/back_text_colour"
                                    android:textSize="@dimen/_12sp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgBalance"
                                    android:layout_width="@dimen/_12dp"
                                    android:layout_height="@dimen/_12dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_2dp"
                                    android:layout_toRightOf="@+id/tvBalance"
                                    android:src="@drawable/ic_om_sort" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="@dimen/_5dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_weight="1"
                                android:gravity="right">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvOverdue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/gilroy_bold"
                                    android:gravity="right"
                                    android:imeOptions="actionDone"
                                    android:inputType="text"
                                    android:text="Overdue"
                                    android:textColor="@color/back_text_colour"
                                    android:textColorHint="@color/back_text_colour"
                                    android:textSize="@dimen/_12sp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgOverdue"
                                    android:layout_width="@dimen/_12dp"
                                    android:layout_height="@dimen/_12dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/_2dp"
                                    android:layout_toRightOf="@+id/tvOverdue"
                                    android:src="@drawable/ic_om_sort" />
                            </RelativeLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <include layout="@layout/content_empty_enquiry_layout" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSalesList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_6dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:nestedScrollingEnabled="true"
                            android:paddingBottom="@dimen/_1dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/row_sales_credit_table" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <RelativeLayout
                        android:id="@+id/layPagination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Showing 0 to 0 of 0 \nEntries"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_12sp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="@dimen/_150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_10dp"
                            android:background="@drawable/layout_round_shap_grey_grey_6"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_2dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/prePage"
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_16dp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                android:layout_weight="1.2"
                                android:src="@drawable/ic_om_left"
                                android:visibility="visible" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvEnquiryPager"
                                android:layout_width="@dimen/_80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginHorizontal="@dimen/_0dp"
                                android:layout_marginTop="@dimen/_0dp"
                                android:layout_toRightOf="@+id/tvOverdue"
                                android:layout_weight="3.5"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:nestedScrollingEnabled="true"
                                android:padding="@dimen/_1dp"
                                android:visibility="visible"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                app:spanCount="3"
                                tools:listitem="@layout/row_pager_enquiry" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/nextPage"
                                android:layout_width="@dimen/_12dp"
                                android:layout_height="@dimen/_16dp"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                android:layout_weight="1.2"
                                android:src="@drawable/ic_om_right"
                                android:visibility="visible" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </RelativeLayout>

                    <include layout="@layout/content_filter" />


                    <!--Ui component for our bar chart-->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/idBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:layout_below="@+id/laySelect"
                        android:layout_marginHorizontal="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_16dp"
                        android:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:gravity = "center_horizontal"
                    android:layout_below="@id/layBorder"
                    android:id="@+id/loginButtonLayout"
                    android:paddingTop="@dimen/_16dp"
                    android:weightSum="1.0">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/submitButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="@dimen/_16dp"
                        android:layout_marginBottom="@dimen/_30dp"
                        android:background="@drawable/bg_button_round_corner_5"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2dp"
                        android:text="Submit"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:layout_weight="0.7"
                        android:textSize="@dimen/_16sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.appcompat.widget.LinearLayoutCompat>