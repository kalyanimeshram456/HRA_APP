    <style name="AppTheme_collapsedAppBar" parent="@android:style/TextAppearance.Large">
      <!--  <item name="android:fontFamily">@font/sf_pro_display_bold</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="AppTheme_expandedAppBar" parent="@android:style/TextAppearance.Large">
