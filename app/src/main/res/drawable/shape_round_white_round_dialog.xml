<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>

            <!-- we define background color -->
            <solid android:color="@color/white" />

            <!-- we define border color and thick -->
            <stroke
                android:width="0.8dp"
                android:color="@color/light_grey_30" />

            <!-- add some padding for text inside -->
            <!--<padding
                android:bottom="15dp"
                android:left="20dp"
                android:right="20dp"
                android:top="15dp" />-->

            <!-- we define corner radius, note that radius can be different for each corner -->
            <corners android:topLeftRadius="@dimen/_5dp"
                android:topRightRadius="@dimen/_5dp"
                android:bottomRightRadius="@dimen/_5dp"
                android:bottomLeftRadius="@dimen/_5dp"/>

        </shape>
    </item>
</layer-list>
