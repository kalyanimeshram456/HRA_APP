<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="-2dp" android:bottom="-2dp">
        <shape>

            <!-- we define background color -->
            <solid android:color="@color/bg_dialog_grey" />

            <!-- we define border color and thick -->
            <stroke
                android:width="0.8dp"
                android:color="@color/app_gray" />

            <!-- add some padding for text inside -->
            <!--<padding
                android:bottom="15dp"
                android:left="20dp"
                android:right="20dp"
                android:top="15dp" />-->

            <!-- we define corner radius, note that radius can be different for each corner -->
            <corners />

        </shape>
    </item>
</layer-list>
