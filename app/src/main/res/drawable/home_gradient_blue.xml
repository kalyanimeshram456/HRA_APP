<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/color_main"
                android:endColor="@color/color_main" />
            <size
                android:width="@dimen/_100dp"
                android:height="@dimen/_100dp" />
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:gravity="center"
        android:height="@dimen/_40dp"
        android:width="@dimen/_40dp">
       <bitmap android:src="@drawable/ic_home_white" />
    </item>

</layer-list>
